package com.example.manager.assign.tasks.repository;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import com.example.manager.assign.tasks.model.Tasks;




@Repository
public class TasksRepo {
	
	@Autowired
	private JdbcTemplate template;
	
	String sql = "select * from tasks t, employee e where  where t.employee_mail = e.employee_mail and"
			+ "e.employee_mail = ? ";	
	public Tasks findByEmployeeMail(String employeeMail) {
	    Tasks t = template.queryForObject(sql, new Object[] {employeeMail}, new Mapper());		
		return t;
	}
	

}
